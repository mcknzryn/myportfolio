<div id="nav-small-screens">
        <ul>
            <a href="/" class="title-small-screens">McKenzie <br> Ryan</a>
            <li><a href="/work/">Work</a></li>
            <li><a href="/about/">CV</a></li>
            <li><a href="/contact/">Contact</a></li>
        </ul>
</div>

<header>
        <div id="nav">
        <ul class="nav-links">
          <li class="title"><a href="/">McKenzie Ryan</a></li>
            <li><a href="/work/">WORK</a></li>
            <li><a href="/about/">CV</a></li>
            <li><a href="/contact/">CONTACT</a></li>
        </ul>
    </div>


    </div>
</header>


<style>
    @media screen and (min-width: 800px) {
        header {
            position: fixed;
            left:0;
            top: 0;
            width: 100%;
            padding-bottom: 20px;
        }

        .nav-links {

        }

        #nav-small-screens {
            display: none;
        }

        ul {
            list-style-type: none;
        }  
        
        li {
          float: left;
          width: 25%;
          line-height: 20px;
          text-align: right;
          font-size: 12px;
          padding-right: 30px;
          
        }

        li a {
          display: block;

        }

        .title {
            color: black;
            font-family: 'Avenir Black';
            font-size: 20px;
            line-height: 20px;
            letter-spacing: -1px;
            text-align: left;
            

        }

        a {
            text-decoration: none;
            color: black;
        }

        .nav-links a:hover {
            color:blue;
            text-decoration:underline;
            text-decoration-thickness: 1.5px;
            text-underline-offset: 2px;
        }

        .title a:hover {
            color:fuchsia;
            text-decoration:underline;
            text-decoration-thickness: 2px;
            text-underline-offset: 2px;
        }
    }

 
    @media screen and (max-width: 800px) {

        .nav-links {
            display: none;
        }

        #nav-small-screens {
            top: 0;
            position: sticky;
            right: 0;
            text-align: right;
            padding-top: 1%;
            padding-bottom: 1%;
            width: 100%;
            background-color: white;
            border-bottom: solid;
        }

        ul {
            list-style-type: none;
            padding: 0;
  
        } 
        
        .title-small-screens {
            color: black;
            font-family: 'Avenir Black';
            font-size: 30px;
            line-height: 30px;
            letter-spacing: -1px;
            text-align: left;
            float:left;

        }

 
        a {
            text-decoration: none;
            color: black;
        }

        #nav-small-screens a:hover {
            color:fuchsia;
            text-decoration:underline;
            text-decoration-thickness: 1.5px;
            text-underline-offset: 2px;
        }

        .title-small-screens a:hover {
            color:blue;
            text-decoration:underline;
            text-decoration-thickness: 3px;
            text-underline-offset: 8px;
        }
    } 
</style>


